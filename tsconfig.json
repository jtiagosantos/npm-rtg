{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es2018",
		"module": "commonjs",
    "declaration": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,                                      
    "skipLibCheck": true
	},
  "include": ["src"],
  "exclude": ["node_modules"]
}